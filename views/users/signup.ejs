<% layout("/layouts/boilerplate")%>
<body>
    <div class="row">

        <div class="col-6 offset-3">
            <h1>Signup for Wanderlust</h1>

            <form method="post" action="/signup" class="needs-validation mt-3" novalidate>
                <div>
                    <lable for="username" class="form-label">Username</lable>
                    <input type="text" name="username" class="form-control" required>
                     <div class="invalid-feedback">enter username!</div>
                </div>
                <div>
                    <label for="email" class="form-label">Email</label>
                    <input type="text" name="email" class="form-control"required>
                     <div class="invalid-feedback">enter email!</div>
                </div>
                <div>
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" required>
                     <div class="invalid-feedback">enter password!</div>
                </div>
                <button class="btn btn-success mt-3 mb-3">Submit</button>
            </form>
        </div>
    </div>
</body>