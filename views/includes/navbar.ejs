
<style>
  .navbar-collapse {
    display: flex;
    flex-direction: row;        
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
  }

  /* Center Search */
  .searchbutton {
    flex: 1 1 auto;
    max-width: 500px;
    margin: 0 20px;            
  }

  .searchbutton form {
    display: flex;
    width: 100%;
  }

  .search {
    background-color: #fe424d;
    color: hsla(0, 28%, 92%, 0.877);
    border-radius: 25px;
    font-size: 0.7rem;
    padding: 0 0.8rem;
    height: 2.2rem;
  }

  .search:hover {
    background-color: darkred;
    color: white;
  }

  .search i {
    display: inline;
    margin-right: 0.3rem;
  }


  .navbar-nav.ms-auto {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  /* Auth buttons */
  .auth-buttons {
    display: flex;
    gap: 10px;
  }

  .btn-primary {
    background-color: #fe424d;
    border: none;
    padding: 8px 16px;
    border-radius: 6px;
    transition: 0.3s;
  }

  .btn-primary:hover {
    background-color: darkred;
  }

  /* --- Mobile Responsive --- */
  @media (max-width: 768px) {
    .navbar-collapse {
      flex-direction: column;   
      align-items: stretch;
      gap: 15px;
    }

    .searchbutton {
      width: 100%;
      margin: 10px 0;
    }

    .navbar-nav.ms-auto {
      flex-direction: column;
      align-items: center;
      gap: 10px;
      width: 100%;
    }

    .auth-buttons {
      justify-content: center;
      width: 100%;
    }
  }
</style>

<nav class="navbar navbar-expand-lg bg-body-tertiary fixed-top sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="#"><i class="fa-solid fa-compass"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

      <!-- Left Explore -->
      <div class="navbar-nav">
        <a class="nav-link active" aria-current="page" href="/listings">Explore</a>
      </div>

      <!-- Middle Search -->
      <div class="searchbutton">
        <form class="d-flex">
          <input class="input form-control me-2" type="search" placeholder="Search destination" aria-label="Search ">
          <button class="search btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i> Search
          </button>
        </form>
      </div>

      <!-- Right Add Listing + Auth -->
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Add New listing</a>

        <% if (!currentUser) { %>
        <div class="auth-buttons">
          <a class="btn btn-primary mx-1" href="/signup">Signup</a>
          <a class="btn btn-primary mx-1" href="/login">Login</a>
        </div>
        <% } %>

        <% if (currentUser) { %>
        <a class="nav-link" href="/logout"><b>Logout</b></a>
        <% } %>
      </div>

    </div>
  </div>
</nav>