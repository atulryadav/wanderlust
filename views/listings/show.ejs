<% layout("/layouts/boilerplate")%>
<body>
  <div class="row">
    <div class="offset-4">
      <h3 style="margin-left: 25px;">Listings Details</h3>


  <div class="card" style="width: 18rem;">
     <h6 class="mb-3"style="margin-left:60px ;"><%=listing.title%></h6>
  <img src="<%=listing.image.url%>" class="card-img-top" alt="listimg">
  <div class="card-body">
    <i>Owned by <%=listing.owner.username%></i>
    <p><%=listing.description%></p>
      <p>&#8377; <%= listing.price%>/night</p>
      <p><%=listing.location%></p>
    <p><%=listing.country%></p>

  </div>
</div>
</div>

   <%if(currentUser && listing.owner._id.equals(currentUser._id)){%>
  <div class="options offset-4 mb-4">
   <form method="get" action="/listings/<%=listing.id%>/edit">
    <button class="btn btn-dark edit">EDIT</button>
   </form>
   <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-dark delete offset-3">Delete</button>
    </form>
    </div>
    <%}%>


    <hr>

    <div class="col-12 offset-3 mt-2">
      <%if(currentUser){%>
      <h4>Leave a Review</h4>
      <form action="/listings/<%=listing.id%>/reviews" method="post" novalidate class="needs-validation">
      
            <div class="col-12 mt-2">
        <fieldset class="starability-slot">
                 
  
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
</div>

        <div class="col-6">
          <label for="comment" class="form-label"><b>Comment Section</b></label>
        <textarea class="form-control col-6" name="review[comment]" placeholder="comment here!" rows="8" required></textarea>
                   <div class="invalid-feedback">enter something!</div>
        </div>
        <br>
        <button class="btn btn-dark">Submit</button>
      </form>
    <%}%>
      <br>
      </div>
      <hr>


      <div class="row rev">

         <p>All Reviews</p>
      <%for(review of listing.reviews){%>
     <div class="reviewcard col-4 ">
     <div class="card-body">
     <h5 class="card-title">@<%=review.author.username%></h5>
    
      <p class="starability-result card-text" data-rating="<%=review.rating%>">
  
  </p>
   <p><%=review.comment%></p>
     </div>
      <form method="post" action="/listings/<%=listing.id%>/reviews/<%=review.id%>?_method=DELETE">
        <button class="btn btn-dark">Delete</button>
      </form>
     </div>
      <%}%>
      </div>

     </div>
    </div>
  </body>
